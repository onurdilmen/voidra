{
  "name": "voidra",
  "version": "0.1.0",
  "description": "Anti-Detect Tarayıcı & VFS Global Randevu Otomasyon Motoru",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "chcp 65001 >nul 2>&1 & node scripts/dev.js",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "build:win": "electron-vite build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "test": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "anti-detect",
    "browser",
    "playwright",
    "automation",
    "voidra"
  ],
  "author": "YASO",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "playwright": "npm:rebrowser-playwright@^1.52.0",
    "rebrowser-patches": "^1.0.19",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "cross-env": "^10.1.0",
    "electron": "^33.4.11",
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.voidra.app",
    "productName": "VOIDRA",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "src/renderer/assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "src/renderer/assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}